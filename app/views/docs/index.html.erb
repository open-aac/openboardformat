<script type="text/x-handlebars" data-template-name="loading-status">
  {{#modal-dialog action="close"}}
    <div class="modal-header">
      <button type="button" class="close" {{action close}}>&times;</button>
      <h3>
        {{header}}
      </h3>
    </div>
    <div class="modal-body">
      {{#if error}}
        <div class="status">
          <span class="glyphicon glyphicon-exclamation-sign"></span>
          {{t "Error: " key='error'}} {{ error }}
        </div>
      {{else}}
        {{#if download_url}}
          <div class="status">
            <a {{bind-attr href=download_url}} target="_blank">
              <span class="glyphicon glyphicon-cloud-download"></span>
              {{t "Done! You can download the result here." key='done_and_download'}}
            </a>
          </div>
        {{else}}
          {{#if validation_results}}
            <div style="margin-bottom: 10px;">
              {{#if validation_results.valid}}
                <h3 class="text-success">{{t "Valid!" key='valid'}}</h3>
                {{t "No Errors" key='errors'}}, 
              {{else}}
                <h3 class="text-danger">{{t "Invalid :-(" key='invalid'}}</h3>
                <span class="text-danger">{{count validation_results.errors key='errors' plural='Errors' singular='Error'}},</span>
              {{/if}}
              <span class="text-warning">{{count validation_results.warnings key='warnings' plural='Warnings' singular='Warning'}}</span>
              <br/>
              {{validation_results.filename}} ({{size validation_results.filesize}})
            </div>
            <table class="table table-striped table-hover" id="validation_results">
              <thead>
                <tr>
                  <th>{{t "Check" key='check'}}</th>
                  <th>{{t "Status" key='status'}}</th>
                </tr>
              </thead>
              <tbody>
                  <tr>
                    <td colspan="2">
                      <h4 {{bind-attr class="general_results_valid:text-success:text-danger"}}>
                        <span {{bind-attr class=":glyphicon general_results_valid:glyphicon-ok:glyphicon-remove"}}></span> 
                        General results
                        <a href="#" {{action 'toggle'}} style="padding-left: 15px; font-size: 12px;">
                          {{#if validation_results.toggled}}
                            expand
                          {{else}}
                            collapse
                          {{/if}}
                        </a>
                      </td>
                    </h4>
                  </tr>
                  {{#unless validation_results.toggled}}
                    {{#each result in validation_results.results}}
                      {{partial "validation-result"}}
                    {{/each}}
                  {{/unless}}
                {{#each sub_result in validation_results.sub_results}}
                  <tr>
                    <td colspan="2">
                      <h4 {{bind-attr class="sub_result.valid:text-success:text-danger"}}>
                        <span {{bind-attr class=":glyphicon sub_result.valid:glyphicon-ok:glyphicon-remove"}}></span> 
                        {{sub_result.filename}} ({{size sub_result.filesize}})
                        <a href="#" {{action 'toggle' sub_result}} style="padding-left: 15px; font-size: 12px;">
                          {{#if sub_result.toggled}}
                            expand
                          {{else}}
                            collapse
                          {{/if}}
                        </a>
                      </h4>
                    </td>
                  </tr>
                  {{#unless sub_result.toggled}}
                    {{#each result in sub_result.results}}
                      {{partial "validation-result"}}
                    {{/each}}
                  {{/unless}}
                {{/each}}
              </tbody>
            </table>
          {{else}}
            <div class="status">
              <span class="spinner"><span class="glyphicon glyphicon-refresh"></span></span>
              {{loader}}
            </div>
          {{/if}}
        {{/if}}
      {{/if}}
    </div>
  {{/modal-dialog}}
</script>

<script type="text/x-handlebars" data-template-name="_validation-result">
  <tr>
    <td class="type"><p>{{result.description}}</p></td>
    <td class="details">
