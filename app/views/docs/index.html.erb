                {{#each button in results.extra_words}}
                  {{button}}&nbsp;&nbsp;
                {{/each}}
              </p>
            </div>
            <h3>{{t "Words Shared with Comparison Vocabulary" key='words_shared_to_comp'}} ({{results.overlapping_words.length}})</h3>
            <div style='max-height: 90px; overflow: auto;'>
              <p>
                {{#each button in results.overlapping_words}}
                  {{button}}&nbsp;&nbsp;
                {{/each}}
              </p>
            </div>
            {{#each missing in missing}}
              {{#if missing.list.length}}
                <h3>{{t "Words Missing Compared to" key='words_missing_compared_to'}} {{missing.name}} ({{missing.list.length}})</h3>
                <div style='max-height: 90px; overflow: auto;'>
                  <p>
                    {{#each button in missing.list}}
                      {{button}}&nbsp;&nbsp;
                    {{/each}}
                  </p>
                </div>
              {{/if}}
            {{/each}}
            <h3>{{t "All Words/Phrases Sorted by Ease of Access" key='buttons_sorted'}}</h3>
            <div style='max-height: 315px; overflow: auto;'>
            <table class='table table-striped table-hover'>
              <thead>
                <tr>
                  <th style='width: 25%;'>{{t "Word/Phrase" key='word_phrase'}}</th>
                  <th style='width: 5%;'>{{t "Level" key='level'}}</th>
                  <th>{{t "Effort Score" key='effort_score'}}</th>
                </tr>
              </thead>
              <tbody>
                {{#each button in results.buttons}}
                  <tr>
                    <td>{{button.label}}</td>
                    <td>{{button.level}}</td>
                    <td>{{button.effort}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
            </div>

            <h3>{{t "Words to Consider Making Easier to Access" key='high_effort_words'}} ({{results.high_effort_words.length}})</h3>
            <div style='max-height: 90px; overflow: auto;'>
              <p>
                {{#each button in results.high_effort_words}}
                  {{button}}&nbsp;&nbsp;
                {{/each}}
              </p>
            </div>
          {{/if}}
